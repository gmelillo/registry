{
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(fix)"
  ],
  "assignees": [
    "gmelillo"
  ],
  "labels": [
    "renovate",
    "dependencies"
  ],
  "prHourlyLimit": 0,
  "masterIssue": true,
  "masterIssueAutoclose": true,
  "packageRules": [
    {
      "managers": [
        "npm",
        "github-actions", 
        "helm-requirements",
        "helm-values",
        "helmfile",
        "helmv3"
      ],
      "extends": [":semanticPrefixChore"]
    },
    {
      "managers": ["gomod"],
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ]
}